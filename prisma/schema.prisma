model Cart {
  id     Int    @id @default(autoincrement())
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  books  Book[]
}

model Author {
  id       Int    @id @default(autoincrement())
  fullName String
  Book     Book?  @relation(fields: [bookId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  bookId   Int?
}

